<?xml version="1.0" encoding="utf-8"?><!-- TODO: Line borders -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    >
   <!-- tools:context="com.example.hiker.ParkDetailsFragment"-->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_weight="2"
        android:gravity="left"
        android:orientation="vertical"
        android:padding="4dp">

        <TextView
            android:id="@+id/parkName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Name of Trail" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:gravity="right"
        android:orientation="vertical"
        android:padding="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="State: " />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nearest City: " />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:gravity="right"
        android:orientation="vertical"
        android:padding="4dp">

        <TextView
            android:id="@+id/parkState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1000" />

        <TextView
            android:id="@+id/parkCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1000" />

    </LinearLayout>
</LinearLayout>