<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.hiker.DetailsFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/trail" />

        <TextView
            android:id="@+id/trailName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="36sp"
            tools:text="Trail Name" />

        <TextView
            android:id="@+id/trailDescription"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="2"
            android:textColor="#000000"
            android:textSize="20sp"
            tools:text="Description" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Features:"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/trailFeatures"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textSize="20sp"
            tools:text="Features" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Length (mi.):"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/trailLength"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textSize="20sp"
            tools:text="Length" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elevation (ft.):"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/trailElevate"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textSize="20sp"
            tools:text="Elevation" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Planned Trips:"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/trailPlannedTrips"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text="No upcoming trips" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Park:"
            android:textColor="#000000"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/trailPark"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textSize="20sp"
            tools:text="Park" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Station:"
            android:textColor="#000000"
            android:textSize="24sp" />
        
        <TextView
            android:id="@+id/trailStation"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textSize="20sp"
            tools:text="Park" />
    </LinearLayout>
</ScrollView>